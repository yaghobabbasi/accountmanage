<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://localhost:5432/AccountManagement</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
     <!--   <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">create</property>-->
        <property name="hibernate.connection.username">Avval_Pc</property>
        <property name="hibernate.connection.password">1</property>

        <property name="show_sql">true</property>
        <mapping class="com.accountm.model.Accountp"/>
        <mapping class="com.accountm.model.Transaction"/>
        <mapping class="com.accountm.model.Userp"/>

    </session-factory>
</hibernate-configuration>